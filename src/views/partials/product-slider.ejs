<div class="slider">
<% for (let i = 0; i < locals.products.length/4; i++) { %>
<div class="slider__elem <%= i ? (i === 1 ? "right" : "") : "active" %>">
  <%- include("./products.ejs", {currProducts:
  locals.products.slice(4*i,4*(i+1))}) %>
</div>
<% } %>
<button class="slider__button slider__button--left">&LT;</button>
<button class="slider__button slider__button--right">&GT;</button>
</div>