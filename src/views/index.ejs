      <section class="contents" id="contents">
        <h2 class="contents__heading">Das steckt drin</h2>
        <div class="contents__container">
          <div class="contents__image">
            <img
              src="../img/FEND_Coffee_Costa-Rica 2.png"
              alt="Kaffee aus Costa Rica"
            />
          </div>
          <div class="contents__text-and-button">
            <div class="contents__descriptions">
              <div class="item icon-1">
                <img
